{% block body %}
    <div class="row">
        <!-- --- --- ----------- COL S4 ----------------->
        <div class="col s4">
            <div class="card">
                <div class="card-content purple white-text center">
                    <p class="card-stats-title"><i class="mdi-social-group-add"></i> Bienvenue {{ app.user.username }}</p>
                </div>

            </div>
                <div class="card">
