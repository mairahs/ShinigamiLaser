{% extends'base.html.twig' %}

{% block body %}

    <div class="row">

        <div class="col s12 m12">
            <p class="justify"><i class="material-icons" style="font-size:15px; color:#e24800!important;">arrow_back</i><a style="color:#e24800;" href="{{ path('admin_findplayer') }}"> Retour au formulaire de recherche</a></p>
            <div class="icon-block">

                <div class="center" style="margin-bottom: 20px;"><img class="img_rounded" src="{{ asset('upload/' ~ player.avatar.name ~ '.' ~ player.avatar.extension) }}"></div>
                <h4 class="center" style="color:#e24800; font-weight: bold;">{{ player.firstname }} {{ player.lastname }}</h4>


            </div>
        </div>


        <table class="responsive-table centered">
            <thead>
            <tr>
                <th>Adresse</th>
                <th>Email</th>
                <th>Date de naissance</th>
                <th>Numéro de téléphone</th>
                <th>Parties</th>
                <th>Scores</th>
            </tr>
            </thead>

            <tbody>
            <tr>
                <td>{{ player.address }}</td>
                <td>{{ player.email }}</td>
                <td>{{ player.dateOfBirth|date('d/m/Y') }}</td>
                <td>{{ player.phoneNumber }}</td>
                <td><i class="material-icons"><a href="#" style="color:#e24800;">remove_red_eye</a></i></td>
                <td><i class="material-icons"><a href="#" style="color:#e24800;">remove_red_eye</a></i></td>
            </tr>

            </tbody>
        </table>

    </div>

{% endblock %}