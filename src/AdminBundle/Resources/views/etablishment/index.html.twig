{% extends 'base/base.admin.html.twig' %}

{% block body %}
    <div class="row card">
        <div class="col s12 m12">
            <i class="material-icons blue-back-text">arrow_back</i>
            <a href="{{ path('admin_dashboard') }}"> Retour à l'interface d'administration</a>
            <h4 class="center white-text">Liste des établissements ShinigamiLaser</h4>
        </div>
        <table class="responsive-table bordered centered">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Code</th>
                    <th>Ville</th>
                </tr>
            </thead>
            <tbody>
            {% for etablishment in etablishments %}
            <tr>
                <td>ShinigamiLaser - {{ etablishment.name|upper }}</td>
                <td>{{ etablishment.code }}</td>
                <td>{{ etablishment.city }}</td>
                <td><i class="material-icons"><a href=" {{ path('admin_etablishment_show', {'id':etablishment.id}) }}" style="color:#e24800;">remove_red_eye</a></i></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}