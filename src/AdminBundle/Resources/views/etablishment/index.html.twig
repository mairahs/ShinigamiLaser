{% extends 'base/base.admin.html.twig' %}

{% block body %}

    <div class="row">

        <div class="col s12 m12">
            <p class="justify"><i class="material-icons" style="font-size:15px; color:#e24800!important;">arrow_back</i><a style="color:#e24800;" href="{{ path('admin_dashboard') }}"> Retour à l'interface d'administration</a></p>
            <div class="icon-block">

                <h4 class="center" style="color:#e24800; font-weight: bold;">Liste des établissements ShinigamiLaser</h4>

            </div>
        </div>

        <table class="responsive-table centered">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Code</th>
                    <th>Ville</th>
                </tr>
            </thead>

            <tbody>

            {% for etablishment in etablishments %}
            <tr>

                <td>ShinigamiLaser - {{ etablishment.name }}</td>
                <td>{{ etablishment.code }}</td>
                <td>{{ etablishment.city }}</td>
                <td><i class="material-icons"><a href=" {{ path('admin_etablishment_show', {'id':etablishment.id}) }}" style="color:#e24800;">remove_red_eye</a></i></td>

            </tr>
            {% endfor %}

            </tbody>
        </table>

    </div>
{% endblock %}