{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 m12">
            <p class="justify"><i class="material-icons" style="font-size:15px; color:#e24800!important;">arrow_back</i><a style="color:#e24800; font-weight:bold;" href="{{ path('admin_etablishment_index') }}"> Retour vers le détail de l'établissement ShinigamiLaser - {{ game.etablishment.name }}</a></p>
        </div>
    </div>
    <div class="col s12 m8 l9">
        <table class="striped">
            <thead>
            <tr>
                <th data-field="id">Joueurs</th>
                <th data-field="name">Score</th>
                <th data-field="name">Classement</th>
            </tr>
            </thead>
            <tbody>
            {% for key, score in game.score %}
            <tr>
                <td><a>{{ score.cards.player.username }}</a></td>
                <td>{{ score.result}} </td>
                <td>{{ key + 1 }}</td>
            </tr>
             {% endfor %}


            </tbody>
        </table>
    </div>
{% endblock %}