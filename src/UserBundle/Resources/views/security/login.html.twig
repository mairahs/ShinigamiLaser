{% extends 'base.html.twig' %}

{% block body %}
    <h3>Se connecter</h3>
    {% if error %}
        <div data-error="wrong">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <form class="row" action="{{ path('user_login') }}" method="post" autocomplete="off">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="input-field col s3">
                <label for="username">
                    Nom d'utilisateur
                </label>
                <input type="text" id="username" name="_username" value="{{ lastUsername }}">
            </div>

            <div class="input-field col s3">
                <label for="password">
                    Mot de passe
                </label>
                <input type="password" id="password" name="_password">
                <input type="hidden" name="_target_path" value="{{ path('app_dashboard') }}" />
            </div>

            <div class="input-field col s12">
             <button type="submit" class="waves-effect waves-light btn"><i class="material-icons right"></i>Connexion</button>
            </div>

            <div class="input-field col s3">
             <p><a href="{{ path('user_pre_lostpassword') }}">Tu as perdu ton mot de passe ?</a></p>
            </div>


        </form>
    </div>

{% endblock  %}