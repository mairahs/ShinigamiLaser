{% extends 'base/base.form.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12">
            <i class="material-icons blue-back-text">arrow_back</i>
            <a class="blue-back-text" href="{{ path('app_dashboard') }}">Retour au dashboard</a>
        </div>
    </div>
    <div class="row">
        <div class="col s8 offset-s2">
            <h4 class="center">Editer son profil</h4>
            {% include 'inc/inc.avatar.img.html.twig' with {'class' : 'img_rounded center-block'} %}
            {{ form_start(form, { 'attr': {'novalidate': 'novalidate', 'autocomplete' : 'off'}}) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}