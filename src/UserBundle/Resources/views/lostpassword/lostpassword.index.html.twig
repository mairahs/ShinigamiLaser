{% extends 'base/base.form.html.twig' %}

{% block body %}
    {% set messages_error = app.flashes('notice') %}
    <div class="row">
        <div class="col s12">
            <h4 class="center">Tu as perdu ton mot de passe ?</h4>
            <p class="center">Renseigne ton email pour le modifier</p>
            <form action="{{ path('user_lostpassword') }}" method="post" autocomplete="off" novalidate="novalidate">
                <div class="row {% if messages_error|length > 0 %}has-error{% endif %}">
                    <div class="input-field col s12">
                        <label for="email">
                            Ton email
                        </label>
                        <input type="text" id="email" name="_email">
                        {% if messages_error|length > 0 %}
                            <ul>
                                {% for message in messages_error %}
                                    <li class="error">{{ message }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button type="submit" class="waves-effect waves-light btn"><i class="material-icons right"></i>Envoyer</button>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
{% endblock %}